{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "allowJs": true,
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "outDir": "./public",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@images/*": ["src/images/*"],
      "@layouts/*": ["src/layouts/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "public", ".cache"]
}
